{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "cyrus-core": ["packages/core/src"],
      "cyrus-claude-parser": ["packages/claude-parser/src"],
      "cyrus-linear-client": ["packages/linear-client/src"],
      "cyrus-history-stream": ["packages/history-stream/src"],
      "cyrus-edge-worker": ["packages/edge-worker/src"],
      "cyrus-claude-runner": ["packages/claude-runner/src"],
      "cyrus-ndjson-client": ["packages/ndjson-client/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}